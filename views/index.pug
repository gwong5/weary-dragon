extends layout

block content
  h1 Number Guess Game
  input(type="number" id="guessInput" placeholder="Number 1 - 100" onchange="guessNumber(this)")
  input(type="submit")
  p(id="guesses") Guesses so far: 0
  .spacer
  h1 Scrabble Bag
  input(type="test" id="scrabbleWord" placeholder="Enter word")
  input(type="submit")
  .spacer
  h1 String Indices
  span
    input(type="text" id="strinDex" placeholder="Enter a sentence" onchange="fn(this)")
    span Choose Index:
    input(type="number" id="indexNumber")
    input(type="submit" onclick="findIndex()")
    p(id="theWord") Bird is The Word
